@model IEnumerable<AccountantSystemv5.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Index";
}

<h2>Purchase Order Index</h2>

<p>
    <a asp-action="Create">Create New</a>
    <br />
    <a asp-area="" asp-controller="Purchases" asp-action="Index">Purchase</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderAmount)
            </th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedDeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderAmount)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchaseOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PurchaseOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PurchaseOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
