                @Html.DisplayFor(modelItem => item.EmCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmZipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmTelephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmPayRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeType.EmployeeTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exemptions.ExemptionNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Withholding.MaritalStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
