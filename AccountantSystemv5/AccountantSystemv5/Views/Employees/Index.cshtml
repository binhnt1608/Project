}

<h2>Employee Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeFirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeSSN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmAddress1)
