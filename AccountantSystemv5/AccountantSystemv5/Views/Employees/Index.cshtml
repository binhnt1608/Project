                <th>
                    @Html.DisplayNameFor(model => model.EmPayRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmStartDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exemptions)
